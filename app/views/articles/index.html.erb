<h1 class="text-2xl font-bold mb-6">記事</h1>

<%= form_with url: articles_path, method: :get, local: true, class: "mb-4" do %>
  <div class="flex gap-2 items-center">
    <%= text_field_tag "q[keyword]",
      params.dig(:q, :keyword),
      placeholder: "記事を検索（タイトル / 要約）",
      class: "border rounded px-3 py-2 w-full" %>

    <%= hidden_field_tag :view, params[:view] if params[:view].present? %>
    <%= hidden_field_tag :sort, params[:sort] if params[:sort].present? %>

    <%= submit_tag "検索", class: "px-4 py-2 rounded bg-black text-white" %>
  </div>
<% end %>

<div class="grid md:grid-cols-2 gap-6">
  <% @articles.each do |a| %>
    <div class="bg-white shadow-md rounded-xl p-5 hover:shadow-lg transition">
      
      <!-- タイトル -->
      <h2 class="text-lg font-semibold mb-2">
        <%= link_to a.title, a.url, target: "_blank", rel: "noopener", class: "hover:underline" %>
      </h2>

      <!-- メタ情報 -->
      <div class="text-sm text-gray-500 mb-2">
        <% if a.source.present? %>
          <span><%= a.source %></span>
        <% end %>
        <% if a.published_on.present? %>
          ・ <span><%= a.published_on %></span>
        <% end %>
      </div>

      <!-- タグ -->
      <% if a.tags.present? %>
        <div class="mb-2">
          <% a.tags.each do |t| %>
            <span class="inline-block bg-blue-100 text-blue-600 text-xs px-2 py-1 rounded mr-1">
              <%= t %>
            </span>
          <% end %>
        </div>
      <% end %>

      <!-- 概要 -->
      <% if a.description.present? %>
        <p class="text-sm text-gray-700">
          <%= a.description %>
        </p>
      <% end %>

    </div>
  <% end %>
</div>
