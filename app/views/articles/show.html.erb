<section class="mx-auto w-full max-w-5xl px-6 py-10">
  <div class="card p-8">
    <p class="text-sm text-slate-500 dark:text-slate-300"><%= @article.published_on %></p>
    <h1 class="mt-2 text-3xl font-extrabold"><%= @article.title %></h1>
    <p class="mt-4 text-slate-700 dark:text-slate-200"><%= @article.summary %></p>

    <div class="mt-3 flex flex-wrap gap-2">
      <% @article.tags.each do |tag| %>
        <span class="rounded-full bg-sky-200 px-2 py-1 text-xs font-semibold text-slate-900 dark:bg-sky-500 dark:text-white">
          <%= tag.name %>
        </span>
      <% end %>
    </div>

    <div class="mt-6 whitespace-pre-wrap rounded-2xl bg-slate-100 p-5 text-sm dark:bg-slate-900">
      <%= @article.body.presence || "本文（あとで追加）" %>
    </div>

    <% if @article.source_url.present? %>
      <div class="mt-6">
        <a class="btn" href="<%= @article.source_url %>" target="_blank" rel="noreferrer">元記事を見る</a>
      </div>
    <% end %>

    <div class="mt-8">
      <%= link_to "← 記事一覧へ", articles_path(view: params[:view]), class: "hover:underline text-sm" %>
    </div>
  </div>
</section>
