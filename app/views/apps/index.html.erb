<section class="mx-auto w-full max-w-5xl px-6 py-10">
  <div class="card p-8">
    <h1 class="text-3xl font-extrabold">アプリ</h1>

    <%= search_form_for @q, url: apps_path, method: :get do |f| %>
      <div class="mt-4 flex gap-3">
        <%= f.search_field :title_or_summary_cont, placeholder: "キーワード検索", class: "input" %>
        <%= f.submit "検索", class: "btn" %>
      </div>

      <div class="mt-4 flex flex-wrap gap-2">
        <% Tag.for_apps.each do |tag| %>
          <label class="pill flex items-center gap-1">
            <%= f.check_box :tags_id_in, { multiple: true }, tag.id, nil %>
            <%= tag.name %>
          </label>
        <% end %>
      </div>
    <% end %>

    <div class="mt-8 grid gap-6 sm:grid-cols-2">
      <% @apps.each do |app| %>
        <div class="flex flex-col rounded-2xl bg-slate-100 p-4 dark:bg-slate-900 text-slate-900 dark:text-white">

          <div class="rounded-xl bg-white p-3 text-center font-bold dark:bg-slate-800 min-h-[48px] flex items-center justify-center">
            <%= app.title %>
          </div>

          <div class="mt-2 flex flex-wrap gap-2 min-h-[56px]">
            <% app.tags.each do |tag| %>
              <span class="rounded-full bg-sky-200 px-2 py-1 text-xs font-semibold text-slate-900 dark:bg-sky-500 dark:text-white">
                <%= tag.name %>
              </span>
            <% end %>
          </div>

          <div class="mt-3 grid grid-cols-2 gap-3">
            <% img_key = app.image_key.presence || "placeholder.png" %>
            <% asset_path = "static/apps/#{img_key}" %>

            <div class="h-28 overflow-hidden rounded-xl bg-slate-200 dark:bg-slate-800">
              <% if Rails.application.assets&.find_asset(asset_path) %>
                <% img_key = app.image_key.presence || "placeholder.png" %>
                <%= image_tag "static/apps/#{img_key}",
                              alt: "#{app.title}の画像",
                              class: "h-full w-full object-cover",
                              loading: "lazy" %>
              <% else %>
                <%= image_tag "static/apps/placeholder.png",
                              alt: "#{app.title}の画像（未登録）",
                              class: "h-full w-full object-cover",
                              loading: "lazy" %>
              <% end %>
            </div>

            <div class="h-28 rounded-xl bg-slate-300 grid place-items-center font-extrabold dark:bg-slate-700">
              動画
            </div>
          </div>

          <div class="mt-auto pt-3">
            <%= link_to "詳細をみる", app_path(app), class: "btn w-full" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
