<section class="card p-8">
  <h1 class="text-3xl font-extrabold"><%= @app.title %></h1>

  <div class="mt-3 flex flex-wrap gap-2">
    <% @app.tags.each do |tag| %>
      <span class="rounded-full bg-sky-200 px-2 py-1 text-xs font-semibold text-slate-900 dark:bg-sky-500 dark:text-white">
        <%= tag.name %>
      </span>
    <% end %>
  </div>

  <div class="mt-4 space-y-2 text-sm font-semibold">
    <div class="inline-block rounded-lg bg-slate-200 px-3 py-2 dark:bg-slate-800">
      MVPリリース：<%= @app.mvp_released_on || "未定" %>
    </div>
    <div class="inline-block rounded-lg bg-slate-200 px-3 py-2 dark:bg-slate-800">
      本リリース：<%= @app.released_on || "未定" %>
    </div>
  </div>

  <div class="mt-6 h-64 rounded-2xl bg-slate-200 grid place-items-center text-2xl font-extrabold dark:bg-slate-800">
    画像
  </div>

  <div class="mt-4 flex flex-wrap gap-3">
    <% if @app.app_url.present? %><a class="btn" href="<%= @app.app_url %>" target="_blank" rel="noreferrer">アプリを触る</a><% end %>
    <% if @app.demo_url.present? %><a class="btn" href="<%= @app.demo_url %>" target="_blank" rel="noreferrer">使い方を見る</a><% end %>
    <% if @app.github_url.present? %><a class="btn" href="<%= @app.github_url %>" target="_blank" rel="noreferrer">Githubを見る</a><% end %>
  </div>

  <div class="mt-8 space-y-3">
    <% [
      ["概要（内容・目的/課題）", @app.summary],
      ["ターゲット", @app.target],
      ["使用技術", @app.tech],
      ["工夫した点", @app.improvements],
    ].each do |label, value| %>
      <div class="rounded-xl bg-slate-100 px-4 py-3 text-sm font-semibold dark:bg-slate-900">
        <div class="text-center font-extrabold"><%= label %></div>
        <div class="mt-2 text-slate-700 dark:text-slate-200"><%= value.presence || "（あとで追加）" %></div>
      </div>
    <% end %>
  </div>

  <div class="mt-8">
    <%= link_to "← App一覧へ", apps_path, class: "hover:underline text-sm" %>
  </div>
</section>
